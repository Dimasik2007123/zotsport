	#top{
		height: 50px;
		list-style: none;
		margin-left: 10%;
		margin-right: 10%;
		align: center;
	}
	#top > ul > li{
		float: left;
		width: 24%;
		position: relative;
		list-style: none;
		height: 50px;
		background: Turquoise;
		text-decoration: none;
		display: block;
		border: 1px solid;
		font-size: 20px;
		font-family: Arial;
		text-align: center;
		line-height: 50px;
		transition: 0.5s ease-in-out;
	}
	#top > ul > li > ul > li{
		list-style: none;
		height: 35px;
		padding-top: 5px;
		padding-bottom: 20px;
		text-align: center;
		margin-left: 0px;
		line-height: 50px;
		font-size: 20px;
		
	}
	#top > ul{
		background: Turquoise;
		text-decoration: none;
		display: block;
		border: 1px solid;
		font-family: Arial;
		text-align: center;
		list-style: none;
	}
	#top li .vipad{
		display: none;
		position: absolute;
		top: 100%;
		border: 1px solid;
	}
	#top  li:hover .vipad{
		display: block;
	}
	.vipad{
		background: PaleTurquoise;
		width: 100%;
		padding-top: 0;
		height: 185px;
		padding-left: 0;
		z-index: 2;
	}
	#top li a{
		text-decoration: none;
		text-align: center;
		color: MediumBlue;
	}
	.vipad li {
		border: 1px solid;
		margin-left: 0px;
		transition: 0.5s ease-in-out;
	}
	#top li:hover{
		background-color: DarkTurquoise;
	}
